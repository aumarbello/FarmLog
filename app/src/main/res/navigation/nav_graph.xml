<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:label="@string/label_login"
        android:name="com.aumarbello.farmlog.ui.LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/to_dashboard"
            app:destination="@id/dashboard"
            />
    </fragment>

    <fragment
        android:id="@+id/dashboard"
        android:label="@string/label_dashboard"
        android:name="com.aumarbello.farmlog.ui.DashboardFragment"
        tools:layout="@layout/fragment_dashboard"
        >
        <action
            android:id="@+id/to_new_entry"
            />
    </fragment>

    <fragment
        android:id="@+id/newEntry"
        android:name="com.aumarbello.farmlog.ui.EntryFragment"
        android:label="@string/label_new_farm"
        tools:layout="@layout/fragment_entry"
        />

    <fragment
        android:id="@+id/image"
        />

    <fragment
        android:id="@+id/mapLocation"
        />
</navigation>